    @* luu vao session *@
    <script>
        function addToCart(koiId, koiName ) {
            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ Id: koiId, Name: koiName }) // Gửi cả id và name
            })
                .then(response => {
                    return response.text().then(text => {
                        if (response.ok) {
                            alert(`Cá koi đã được thêm vào giỏ hàng!`);
                        } else {
                            alert('Có lỗi xảy ra khi thêm cá koi vào giỏ hàng: ');
                        }
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

    </script>

</body>
</html>
@model IEnumerable<SellingKoi.Models.KOI>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Koi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .koi-container {
            display: flex;
            flex-wrap: wrap;
        }

        .koi-item {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px;
            padding: 10px;
            width: 200px;
            text-align: center;
        }

            .koi-item img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
            }

        .add-to-cart {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

            .add-to-cart:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>

    <h1>Danh sách Koi hiện có</h1>
    <div class="koi-container" id="koiContainer">
        @foreach (var koi in Model)
        {
            <div class="koi-item">
                @* <img src="@koi.ImageUrl" alt="@koi.Name"> *@
                <img src="/images/default-koi.jpg" class="card-img-top" alt="Default Koi Image">
                <h5>Tên giống cá: @koi.Name</h5>
                <h6>Trang trại: @koi.Farm.Name</h6>
                <h6>Tuổi : @koi.Age</h6>
                <button class="add-to-cart" onclick="addToCart('@koi.Id', '@koi.Name')">Thêm vào giỏ hàng</button>
            </div>
        }
    </div>

    <script>
        // Hàm để thêm Koi vào giỏ hàng
        function addToCart(koiId, koiName) {
            alert(`Cá Koi ${koiName} đã được thêm vào giỏ hàng!`);
            // Ở đây bạn có thể thêm mã để thực sự thêm vào giỏ hàng
        }
    </script>


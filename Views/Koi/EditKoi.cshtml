@model SellingKoi.Models.KOI

@{
    ViewData["Title"] = "Chỉnh sửa Koi";
}

<div class="container mt-4">
    <h2 class="mb-4">Chỉnh sửa thông tin cá Koi</h2>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="EditKoi" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên Koi</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Loại Koi</label>
                    <select asp-for="Type" class="form-select">
                        <option value="">-- Chọn loại Koi --</option>
                        <option value="Kohaku">Kohaku</option>
                        <option value="Sanke">Sanke</option>
                        <option value="Showa">Showa</option>
                        <option value="Utsuri">Utsuri</option>
                        <option value="Ogon">Ogon</option>
                        <option value="Chagoi">Chagoi</option>
                        <option value="Butterfly">Butterfly</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Tuổi</label>
                    <input asp-for="Age" class="form-control" type="number" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Farm.Name" class="form-label">Trang trại</label>
                    <input asp-for="Farm.Name" class="form-control" readonly />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="KoiManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}

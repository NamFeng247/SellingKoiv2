@model IEnumerable<SellingKoi.Models.KOI>

@{
    ViewData["Title"] = "Quản lý Koi";
}

<div class="container mt-4">
    <h2 class="mb-4">Quản lý Koi</h2>

    <div class="mb-3">
        <a asp-action="CreateKoi" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm Koi mới
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var koi in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/default-koi.jpg" class="card-img-top" alt="@koi.Name">
                        <div class="card-body">
                            <h5 class="card-title">@koi.Name</h5>
                            <p class="card-text">
                                <span class="badge bg-info">@koi.Type</span>
                                <span class="badge bg-secondary">@koi.Farm.Name</span>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Đăng ký: @koi.Registration_date.ToShortDateString()</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a asp-action="DetailsKoi" asp-route-id="@koi.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a asp-action="EditKoi" asp-route-id="@koi.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form asp-action="NegateKoi" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@koi.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa Koi này?');">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Không tìm thấy Koi nào.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
